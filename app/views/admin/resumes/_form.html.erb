<%= form_for [:admin, @resume] do |f| %>

  <div class="field">
    <%= f.label :file %>
    <%= f.file_field :file %>
  </div>
  <div class="field">
    <%= f.label :height %>
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :page_1_photo %>
    <%= f.file_field :page_1_photo %>
  </div>
  <div class="field">
    <%= f.label :page_2_photo %>
    <%= f.file_field :page_2_photo %>
  </div>
  <div class="field">
    <%= f.label :display_photos %>
    <%= f.check_box :display_photos %>
  </div>

  <div class="actions">
    <%= f.submit %>
    <% unless @resume.new_record? %>
      <%= link_to 'Delete Resume', [:admin, @resume], method: :delete, confirm: 'Are you sure?' %>
    <% end %>
  </div>

<% end %>